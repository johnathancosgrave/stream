<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>YouTube Watcher with Thumbnails</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 20px;
      background-color: #f0f0f0;
    }
    input {
      width: 60%;
      padding: 10px;
      margin: 10px 0;
      font-size: 16px;
    }
    button {
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      margin-left: 10px;
    }
    iframe {
      margin-top: 20px;
      width: 80%;
      height: 450px;
      border: none;
    }
    .playlist {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 15px;
      margin-top: 20px;
      width: 90%;
    }
    .video-item {
      background: #fff;
      border: 1px solid #ccc;
      border-radius: 10px;
      overflow: hidden;
      cursor: pointer;
      transition: transform 0.2s;
    }
    .video-item:hover {
      transform: scale(1.05);
      background: #e0e0e0;
    }
    .video-item img {
      width: 100%;
      display: block;
    }
    .video-item p {
      margin: 5px;
      font-size: 14px;
      text-align: center;
      word-break: break-word;
    }
  </style>
</head>
<body>
  <h1>YouTube Watcher with Thumbnails</h1>
  <div>
    <input type="text" id="videoUrl" placeholder="Enter YouTube video URL">
    <button onclick="addToPlaylist()">Add to Playlist</button>
  </div>
  <iframe id="youtubePlayer" src="" allowfullscreen></iframe>
  <div class="playlist" id="playlist"></div>

  <script>
    const playlist = [];

    function extractVideoId(url) {
      let videoId = null;
      if (url.includes("youtube.com/watch?v=")) {
        videoId = url.split("v=")[1]?.split("&")[0];
      } else if (url.includes("youtu.be/")) {
        videoId = url.split("youtu.be/")[1]?.split("?")[0];
      }
      return videoId;
    }

    function loadVideo(videoId) {
      document.getElementById('youtubePlayer').src = `https://www.youtube.com/embed/${videoId}`;
    }

    function addToPlaylist() {
      const url = document.getElementById('videoUrl').value;
      const videoId = extractVideoId(url);
      if(videoId) {
        playlist.push({ id: videoId, url });
        renderPlaylist();
        loadVideo(videoId);
        document.getElementById('videoUrl').value = '';
      } else {
        alert('Please enter a valid YouTube URL');
      }
    }

    function renderPlaylist() {
      const playlistEl = document.getElementById('playlist');
      playlistEl.innerHTML = '';
      playlist.forEach((video, index) => {
        const div = document.createElement('div');
        div.className = 'video-item';
        div.innerHTML = `
          <img src="https://img.youtube.com/vi/${video.id}/mqdefault.jpg" alt="Thumbnail">
          <p>Video ${index + 1}</p>
        `;
        div.onclick = () => loadVideo(video.id);
        playlistEl.appendChild(div);
      });
    }
  </script>
</body>
</html>
